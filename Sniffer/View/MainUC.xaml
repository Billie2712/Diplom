<UserControl x:Class="Sniffer.View.MainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sniffer.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать!" FontSize="18" />
            <Button Content="Click Me" Command="{Binding ShowMessageCommand, Mode=OneTime}"
                Width="70" Height="20" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
